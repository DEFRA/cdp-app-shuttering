{
  "name": "cdp-app-shuttering-template",
  "version": "0.1.0",
  "description": "CDP Shuttering Template, simple util to create the shuttered template page used for shuttering CDP applications",
  "engines": {
    "node": ">=22.17.1"
  },
  "type": "module",
  "scripts": {
    "build": "npm run clean && npm run build:assets && npm run build:html --",
    "build:prod": "NODE_ENV=production npm run build --",
    "build:dev": "NODE_ENV=development npm run build --",
    "build:assets": "webpack",
    "build:html": "node scripts/html-builder.js --",
    "create:content": "node scripts/create.js --",
    "create:interactive": "node scripts/interactive-shuttering.js",
    "clean": "rm -rf ../.dist",
    "format": "prettier --write \"src/**/*.js\" \"**/*.{js,md,json,config.js,test.js}\"",
    "format:check": "prettier --check \"src/**/*.js\" \"**/*.{js,md,json,config.js,test.js}\"",
    "lint": "run-s lint:js lint:scss",
    "lint:fix": "eslint . --fix",
    "lint:js": "eslint .",
    "lint:scss": "stylelint \"src/**/*.scss\" --cache --cache-location .cache/stylelint --cache-strategy content --color --ignore-path .gitignore"
  },
  "author": "Defra DDTS",
  "license": "OGL-UK-3.0",
  "dependencies": {
    "chalk": "4.1.2",
    "govuk-frontend": "5.13.0",
    "html-minifier-terser": "7.2.0",
    "nunjucks": "3.2.4"
  },
  "devDependencies": {
    "clean-webpack-plugin": "4.0.0",
    "commander": "12.1.0",
    "copy-webpack-plugin": "13.0.1",
    "css-loader": "7.1.2",
    "eslint": "9.39.1",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-jest": "29.2.1",
    "eslint-plugin-jest-formatting": "3.1.0",
    "eslint-plugin-n": "17.23.1",
    "eslint-plugin-prettier": "5.5.4",
    "eslint-plugin-promise": "7.2.1",
    "inquirer": "9.3.8",
    "mini-css-extract-plugin": "2.9.4",
    "neostandard": "0.12.2",
    "npm-run-all": "4.1.5",
    "open": "10.2.0",
    "prettier": "3.7.4",
    "resolve-url-loader": "5.0.0",
    "sass": "1.94.2",
    "sass-loader": "16.0.6",
    "source-map-loader": "5.0.0",
    "style-loader": "4.0.0",
    "stylelint": "16.26.1",
    "stylelint-config-gds": "2.0.0",
    "webpack": "5.103.0",
    "webpack-assets-manifest": "6.4.0",
    "webpack-cli": "6.0.1",
    "webpack-dev-server": "5.2.2"
  }
}
